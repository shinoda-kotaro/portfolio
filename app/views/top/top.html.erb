<div class="skill_container" id="4">
  <p class="skill_title">Skill</p>
  <div class="skill_table_container table-responsive">
    <table class="table center-block skill_table">
      <tr>
        <th>Language</th>
        <td>HTML</td>
        <td>CSS</td>
        <td>Ruby</td>
        <td>Ruby on Rails</td>
      </tr>
      <tr>
        <th>OS</th>
        <td>Windows</td>
        <td>CentOS</td>
      </tr>
      <tr>
        <th>Development Environment</th>
        <td>Vagrant</td>
      </tr>
    </table>
  </div>

  <div class="skill_responsive_container">
    <div class="accordion" id="collapse-accordion">
      <div class="skill_language">
        <div class="skill_language_header">
          <button class="btn btn-success btn-block btn-info" type="button" data-toggle="collapse"
            data-target="#collapse-accordion-1" aria-expanded="true" aria-controls="collapse-accordion-1">
            Language
          </button>
        </div>
        <div id="collapse-accordion-1" class="collapse" aria-labelledby="headingOne">
          <div class="skill_language_body">
            <ul class="list-group">
              <li class="list-group-item">HTML</li>
              <li class="list-group-item">CSS</li>
              <li class="list-group-item">Ruby</li>
              <li class="list-group-item">Ruby on Rails</li>
            </ul>
          </div>
        </div>
      </div>

      <div class="skill_OS">
        <div class="skill_OS_header">
          <button class="btn btn-success btn-block btn-info" type="button" data-toggle="collapse"
            data-target="#collapse-accordion-2" aria-expanded="true" aria-controls="collapse-accordion-2">
            OS
          </button>
        </div>
        <div id="collapse-accordion-2" class="collapse" aria-labelledby="headingOne">
          <div class="skill_OS_body">
            <ul class="list-group">
              <li class="list-group-item">Windows</li>
              <li class="list-group-item">CentOs</li>
            </ul>
          </div>
        </div>
      </div>

      <div class="skill_DE">
        <div class="skill_DE_header">
          <button class="btn btn-success btn-block btn-info" type="button" data-toggle="collapse"
            data-target="#collapse-accordion-3" aria-expanded="true" aria-controls="collapse-accordion-3">
            Development Environment
          </button>
        </div>
        <div id="collapse-accordion-3" class="collapse" aria-labelledby="headingOne">
          <div class="skill_OS_body">
            <ul class="list-group">
              <li class="list-group-item">vagrant</li>
            </ul>
          </div>
        </div>
      </div>

    </div>
  </div>

</div>

